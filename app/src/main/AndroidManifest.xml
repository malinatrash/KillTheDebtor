<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.KillTheDebtor"
        tools:targetApi="31">
        <activity
            android:name=".ViewControllers.DebtsListViewController"
            android:exported="false" />
        <activity
            android:name=".ViewControllers.StudentsListViewController"
            android:exported="false" />
        <activity
            android:name=".ViewControllers.GroupsListViewController"
            android:exported="false" />
        <activity
            android:name=".ViewControllers.DisciplinesListViewController"
            android:exported="false" />
        <activity
            android:name=".ViewControllers.LoginViewController"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>